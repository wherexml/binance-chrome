{
    "manifest_version": 3,
    "name": "Binance Alpha Daily Analyzer",
    "version": "0.1.0",
    "description": "抓取当天 Alpha 历史限价单并按代币统计买卖与磨损成本。",
    "permissions": ["scripting", "activeTab", "storage"],
    "host_permissions": ["https://www.binance.com/*"],
    "content_scripts": [
      {
        "matches": [
          "https://www.binance.com/*/my/orders/alpha/orderhistory*",
          "https://www.binance.com/my/orders/alpha/orderhistory*"
        ],
        "js": ["content.js"],
        "run_at": "document_idle"
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["pageHook.js"],
        "matches": ["https://www.binance.com/*"]
      }
    ]
  }